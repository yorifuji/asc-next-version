{
  "name": "asc-next-version",
  "version": "1.0.0",
  "description": "GitHub Action to determine next version and build number for App Store Connect",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run build:clean && npm run build:compile",
    "build:clean": "rm -rf dist",
    "build:compile": "tsx build.ts",
    "build:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "verify": "npm run lint && npm run format:check && npm run test",
    "verify:fix": "npm run lint:fix && npm run format && npm run test",
    "precommit": "npm run verify",
    "prepare": "npm run build",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run verify && npm run build",
    "version": "npm run verify && git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "github-actions",
    "app-store-connect",
    "ios",
    "macos",
    "versioning",
    "build-number"
  ],
  "author": "yorifuji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yorifuji/asc-next-version.git"
  },
  "bugs": {
    "url": "https://github.com/yorifuji/asc-next-version/issues"
  },
  "homepage": "https://github.com/yorifuji/asc-next-version#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "axios": "^1.7.7",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "esbuild": "^0.24.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.3.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist/",
    "action.yml",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yorifuji"
  }
}
